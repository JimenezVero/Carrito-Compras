<%= form_for(:model) do |form| %>
<p>
  <%= form.label :input, :style => 'float: left' %> <!-- <label id="helper.label"/> -->
  <%= form.text_field :input, :placeholder => 'Enter text here...' %> <!-- <label id="helper.text"/> -->
</p>

<p>
  <%= form.label :address, :style => 'float: left' %>
  <%= form.text_area :address, :rows => 3, :cols => 40 %> <!-- <label id="helper.textarea"/> -->
</p>

<p>
  <%= form.label :color, :style => 'float: left' %>
  <%= form.radio_button :color, 'red', :style => 'float: left' %> <!-- <label id="helper.radio"/> -->
  <%= form.label :red , :style => 'float: left'%>
  <%= form.radio_button :color, 'yellow', :style => 'float: left' %>
  <%= form.label :yellow , :style => 'float: left'%>
  <%= form.radio_button :color, 'green' , :style => 'float: left'%>
  <%= form.label :green %>
</p>

<p>
  <%= form.label 'condiment', :style => 'float: left' %>
  <%= form.check_box :ketchup, :style => 'float: left' %> <!-- <label id="helper.checkbox"/> -->
  <%= form.label :ketchup, :style => 'float: left' %>
  <%= form.check_box :mustard, :style => 'float: left' %>
  <%= form.label :mustard, :style => 'float: left' %>
  <%= form.check_box :mayonnaise, :style => 'float: left' %>
  <%= form.label :mayonnaise %>
</p>

<p>
  <%= form.label :priority, :style => 'float: left' %>:
  <%= form.select :priority, (1..10) %> <!-- <label id="helper.select"/> -->
</p>

<p>
  <%= form.label :start, :style => 'float: left' %>:
  <%= form.date_select :start %> <!-- <label id="helper.date"/> -->
</p>

<p>
  <%= form.label :alarm, :style => 'float: left' %>:
  <%= form.time_select :alarm %> <!-- <label id="helper.time"/> -->
</p>
<% end %>
